{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "linterOptions": {
      "exclude": ["config/**/*.js", "node_modules/**/*", "*.json", "**/*.json"]
    },
    "rules": {
      "jsx-boolean-value": ["never"],
      "semicolon": [true, "never"],
      "jsx-no-lambda": false,
      "quotemark": [true, "single", "jsx-double"],
      "trailing-comma": [
        true,
        {
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "always",
            "typeLiterals": "ignore"
          },
          "esSpecCompliant": true
        }
      ],
      "no-console": {
        "severity": "warning"
      },
      "interface-name": [true, "never-prefix"],
      "max-file-line-count": {
        "severity": "warn",
        "options": [100]
      }
    }
  }
  